{
  "manifest_version": 3,
  "name": "YouTube Tab Pause",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when switching tabs and resumes when returning",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}